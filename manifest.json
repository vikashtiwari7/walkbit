{
  "manifest_version": 3,
  "name": "WalkBit",
  "version": "1.1.0",
  "description": "Reminds developers to get up and walk. Simple, effective, open-source.",
  "permissions": ["alarms", "notifications", "storage", "idle", "offscreen", "tabs"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WalkBit",
    "default_icon": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
  },
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" }
}